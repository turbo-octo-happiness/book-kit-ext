{
  "manifest_version": 2,

  "name": "Book Kit Bookmark Manager",
  "description": "This extension add bookmarks to the Book Kit application",
  "version": "1.0",

  "browser_action": {
    "default_icon": "build/img/icon.png",
    "default_popup": "build/index.html"
  },

  "permissions": [
    "identity",
    "activeTab",
    "storage"
  ],

  "content_security_policy": "script-src 'self' https://cdn.auth0.com/; object-src 'self'"
}
